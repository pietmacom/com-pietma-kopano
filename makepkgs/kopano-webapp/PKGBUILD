# https://wiki.archlinux.org/index.php/VCS_package_guidelines#Git
pkgver() {
    cd ${srcdir}/${pkgname}
    if [[ "${pkgname}" == *-git ]];
    then
        git tag -l v* --sort=v:refname | tail -n 1 | sed "s|v\(.*\)|\1.r$(git rev-list --count HEAD).$(git rev-parse --short HEAD)|"
    else
        echo ${pkgver}
    fi
}

