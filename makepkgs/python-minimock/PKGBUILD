_module='MiniMock'
pkgver='1.2.8'

# template start; name=python; version=1;
# https://wiki.archlinux.org/index.php/Python_package_guidelines
pkgname=${_module,,}
pkgrel=1
arch=(
    'any'
     )
source=(
    "https://pypi.python.org/packages/source/${_module::1}/$_module/$_module-$pkgver.tar.gz"
	)
md5sums=(
    'SKIP'
	)
makedepends+=(
    'python-setuptools'
	    )

pkgInfo() {
    pkgInfoFile="src/${_module}-${pkgver}/PKG-INFO"
    if [ -e "${pkgInfoFile}" ];
    then
	grep -o -m 1 "^$1: .*" ${pkgInfoFile}  | sed 's|.*: ||'
    else
	echo
    fi
}
pkgdesc="$(pkgInfo 'Summary')"
url="$(pkgInfo 'Home-page')"
license=("$(pkgInfo 'License')")

build() {
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
# template end;
