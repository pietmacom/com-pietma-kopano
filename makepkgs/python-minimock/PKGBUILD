_module='MiniMock'
pkgver='1.2.8'

# template start; name=python; version=1;
# https://wiki.archlinux.org/index.php/Python_package_guidelines
pkgname=("${_module,,}")
pkgrel=1
arch=(
    'any'
     )
source=(
    "https://pypi.python.org/packages/source/${_module::1}/$_module/$_module-$pkgver.tar.gz"
	)
md5sums=(
    'SKIP'
	)
makedepends+=(
    'python-setuptools'
	    )

prepare() {
    cd "${srcdir}/${_module}-${pkgver}"
    pkgdesc_${pkgname}="$(pkgInfo 'Summary')"
    url_${pkgname}="$(pkgInfo 'Home-page')"
    license_${pkgname}=("$(pkgInfo 'License')")
}

build() {
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py build
}

package() {
    cd "${srcdir}/${_module}-${pkgver}"
    python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}

pkgInfo() {
    grep -o -m 1 "^$1: .*" PKG-INFO  | sed 's|.*: ||'
}
# template end;
