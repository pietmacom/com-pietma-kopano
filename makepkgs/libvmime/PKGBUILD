pkgname=libvmime
pkgver=0.9.2
pkgrel=2
pkgdesc="A C++ class library for working with MIME messages"
arch=('x86_64' 'armv7h')
url="http://www.vmime.org/"
license=('GPL')
depends=('gsasl' 
	 'gnutls')
makedepends=('cmake' 'git' 'postfix' 'doxygen' 'xdot')
source=("https://github.com/kisli/vmime/archive/v$pkgver.tar.gz")
conflicts=('zarafa-libvmime')
replaces=('zarafa-libvmime')
md5sums=('SKIP')

prepare() {
  mkdir build
}

build() {
  cd build

  cmake ../vmime-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=/usr/lib/ \
    -DCMAKE_BUILD_TYPE=Release

  make
}

package() {
  cd build

  make DESTDIR="$pkgdir" install
}