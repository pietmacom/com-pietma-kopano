pkgname=libvmime
pkgver=0.9.3
pkgrel=1
pkgdesc="A C++ class library for working with MIME messages"
arch=('x86_64' 'armv7h')
url="http://www.vmime.org/"
source=(
	"git+https://github.com/kisli/vmime.git#branch=master"
	)
md5sums=(
	 'SKIP'
	)
license=('GPL')

makedepends=(
	 'cmake'
	 'git'
	 'postfix'
	 'doxygen'
	 'xdot'
	    )
depends=(
	 'gsasl' 
	 'gnutls'
	)


prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../vmime \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=/usr/lib/ \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}